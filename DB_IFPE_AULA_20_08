create table Produtos(
  
  id int primary key auto_increment,
  nome varchar(100) not null,
  descricao varchar(1000) default "Sem descrição",
  preco float,
  check(preco > 0)

);

create table Clientes( 
  id int primary key auto_increment,
  nome varchar(100) not null,
  cpf varchar(50) unique
);

alter table Pessoa drop column tel;
alter table Pessoa add column email varchar(50);

create table Cargo(

  nome varchar(100),
  salario float 

);

create table Pessoa( 

  nome varchar(100),
  tel varchar(50),
  nascimento datetime

);

create table Pessoa(

  id int not null auto_increment,
  nome varchar(100), tel int,
  nascimento datetime,
  primary key (id) 

);

create database lojaifpe;

drop database myfirst_db;

create database myfirst_db;

use pratica_db;

drop database myfirst_d;

use pratica_db;


create table Produtos(

id int primary key auto_increment,
nome varchar(100) not null,
descricao varchar(1000) default "Sem descrição",
preco float,
check(preco > 0)

);


create table Pedido(

id int primary key auto_increment,
data_pedido datetime,
valor float,
id_Cliente int,
foreign key (id_Cliente) references Clientes(id)


);


create table Pedido_produto(

id_pedido int,
foreign key (id_pedido) references Pedido(id),
id_Produto int,
foreign key (id_Produto) references Produtos(id),
quantidade int,
primary key(id_Produto, id_Pedido)

);





